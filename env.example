# Database Configuration 
NODE_ENV=development

DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_DATABASE=your_db_name
DB_PORT=3306

DB_LOCALHOST=localhost
DB_LOCALUSER=local_user
DB_LOCALPASSWORD=local_password
DB_LOCALDATABASE=local_db

# Authentication
JWT_SECRET=your_very_long_random_jwt_secret_key_here_minimum_32_characters


# Generate a strong JWT secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Digital Ocean Spaces
DO_SPACES_ENDPOINT=https://your-region.digitaloceanspaces.com
DO_SPACES_REGION=your-region
DO_SPACES_KEY=your_spaces_key
DO_SPACES_SECRET=your_spaces_secret
DO_SPACES_NAME=your_bucket_name

# Email Configuration
EMAIL_HOST=your_email_host
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password

# Public URLs (safe to use NEXT_PUBLIC_)
NEXT_PUBLIC_API_URL=https://yourdomain.com

# .env.local - FOR DEVELOPMENT ONLY
# Copy .env.example to .env.local and fill with your actual values
